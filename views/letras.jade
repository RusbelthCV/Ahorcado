html
    head
        title Ahorcado
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous")
    body
        div(class = "container")
            div(class = "row")
                form(action = "/todo/comprobar" method = "POST")
                    div(class = "form-group")
                        input(class = "form-control" name = "letra" type = "text" maxlength = "1" required)
                    button(class = "btn btn-primary" type = "submit") Enviar
            div(class = "row")
                
                div(class = "col-12") 
                    each letra in letras
                        span #{letra}
                div(class = "col-12") 
                    each acertada in acertadas  
                        span #{acertada}